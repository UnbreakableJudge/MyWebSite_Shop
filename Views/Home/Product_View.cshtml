@model ChoosedModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        <div><img src="~/@Model.MetaDataProduct.ImagePath@Model.MetaDataProduct.ImageName"></div>
        @{
            for (int i = 0; i < Model.AboutProduct.Count; i++) 
            {
                if (Model.AboutProduct[i].MajorNameField != "-")
                {
                    <div class="Majorfailed">@Model.AboutProduct[i].MajorNameField</div>
                }
                else
                {
                    <div class="Description">
                        <div>
                            @Model.AboutProduct[i].DescriptionNameField
                        </div>
                        <div>
                            @Model.AboutProduct[i].DescriptionField
                        </div>
                    </div>
                }

            }

    }
    
        
    </div>
</body>
</html>